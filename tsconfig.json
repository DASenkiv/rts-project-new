{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
//    чтоб не импортить реакт в каждый файл
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    //    для работы с commonjs пакетами с помощью import
    "esModuleInterop": true,
    //    для работы с пакетами без дефолтного импорта
    "allowSyntheticDefaultImports": true
  },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
  },
//  для абсолютного импорта
  "baseUrl": "."
}